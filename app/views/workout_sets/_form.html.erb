<section>
  <h2 class="text-xl font-title mb-2">Добавить новый подход</h2>
  <%= form_for @workout_set, :controller => :workout_set,
                            :action => 'create',
                            :method => :post,
                            :id => 'workout-set-form',
                            :class => 'bg-neutral-50 p-4 rounded-md shadow space-y-4',
                            :remote => true do |ws| %>
  <%= ws.hidden_field :training_id, value: training_id %><br>
  <div>
    <%= ws.label "Вес", class: "block text-lg mb-2" %>
    <%= ws.number_field :sets, class: "w-full p-2 rounded-md border border-neutral-300"%><br>
  </div>
  
  <div>
    <%= ws.label "Повторы", class: "block text-lg mb-2" %>
    <%= ws.number_field :reps, class: "w-full p-2 rounded-md border border-neutral-300"%><br>
  </div>
  
  <div>
      <button type="submit" class="bg-primary text-neutral-50 rounded-md py-2 w-full">Начать тренировку</button>
<% end %>
    <%# <%= ws.collection_select(:exersize, :body_part, %w[ rap rock country 0], {}) %> 

    <label for="exercise" class="block text-lg mb-2">Exercise</label>
    <select id="exercise" class="">
      <option value="exercise1">Exercise 1</option>
      <option value="exercise2">Exercise 2</option>
      <option value="exercise3">Exercise 3</option> 
    </select>
  <div id="select-menu">
    <%= form_tag('/search', method: 'get', :id => 'get_exersize' ) do %>
      <%= label_tag(:type) %>
      <%= select_tag(:type, options_for_select(Exersize::TYPE )) %>
      <%= label_tag(:body_part) %>
      <%= select_tag(:body_part, options_for_select(Exersize::BODY_PART )) %>
      <%= label_tag(:support_type) %>
      <%= select_tag(:support_type, options_for_select(Exersize::SUPPORT_TYPE )) %>
      <%= text_field_tag(:search1, params[:search]) %>
    <% end %>
    <ul id="results-list"></ul>
  </div>
</section>