<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="pull-right">
  <%= link_to_if Post.creatable_by?(current_user, @project),
                 icon('plus', '<strong>Create Post</strong>'),
                 new_project_post_path(@project),
                 class: 'btn btn-primary' do end %>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', project_post_path(@project, post) %></td>
        <td><%= link_to 'Edit', edit_project_post_path(@project, post) %></td>
        <td><%= link_to 'Destroy', project_post_path(@project, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

