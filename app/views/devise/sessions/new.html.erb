<% provide(:title, "Login") %>


<div class="page-login bg-gradient-7">


  <div class="login-inner ">

    <!--project title logo  -->
    <div class="logo">
      <h1>Rails Template</h1>
      <h4>Ruy On Rails Project</h4>
      <h4>Login Page</h4>
    </div>
    <!-- END project title logo  -->

    <!--Login box-->
    <div class="login-box">
      <div class="row clearfix">

        <!--Login Form-->
        <div class="col-md-4 col-md-offset-2">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h4>Login</h4>
          <div class="input-group">
            <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'username' %>
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
          </div>

          <div class="input-group">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password' %>
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          </div>

          <div class="actions">
            <%= f.submit "Start using it", class: 'btn btn-primary btn-block btn-login' %>
          </div>
        <% end %>

          <div>
          <%= render "devise/shared/links" %>
          </div>
        </div>
        <!--END Login Form-->

        <!--side-->
        <div class="col-md-6">
        </div>
        <!--side-->
      </div>

    </div>
    <!--END Login Box-->
  </div>
</div>

