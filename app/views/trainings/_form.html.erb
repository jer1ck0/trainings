<%= form_for(training) do |tr| %>
    <%= tr.label 'Комментарий', class: 'block text-lg mb-2'  %>
    <%= tr.text_field :comment, class: 'w-full p-2 rounded-md border border-neutral-300', autofocus: true, autocomplete: 'off', placeholder: 'Поделитесь впечатлениями как прошла ваша тренировка' %>
    <%= tr.submit %>
<% end %>
<br>
<%= render 'current_workout_sets', workout_sets: training.workout_sets %>
<%= render partial: "workout_sets/form", locals: {workout_set: @workout_set = WorkoutSet.new, training_id: training.id} %>

